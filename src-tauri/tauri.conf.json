{
  "package": {
    "productName": "WADPunk",
    "version": "../package.json"
  },

  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:3000",
    "distDir": "../build",
    "withGlobalTauri": false
  },

  "tauri": {
    "allowlist": {
      "shell": {
        "sidecar": true,
        "open": ".*"
      },
      "process": {
        "relaunch": true,
        "exit": true
      }
    },

    "bundle": {
      "identifier": "com.mikewhy.wadpunk",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": ["./sidecar/7zip/7za"]
    },

    "updater": {
      "active": true,
      "endpoints": [
        "https://raw.githubusercontent.com/mikew/wadpunk/main/tauri-updater.json"
      ],
      "dialog": false,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNCRTk5RDgzNzE1Mjk2ODIKUldTQ2xsSnhnNTNwTzNyaEM4Ym91a2ZIZDN6dTExenJCblJvSVhERk0za1JKdXJQOUZzTy9aVHUK",

      "windows": {
        "installMode": "passive"
      }
    },

    "security": {
      "csp": null
    },

    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "WADPunk",
        "theme": "Dark",
        "width": 800,
        "height": 600
      }
    ]
  }
}
