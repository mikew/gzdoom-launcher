{
  "package": {
    "productName": "WADPunk",
    "version": "0.0.0"
  },

  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "devPath": "http://localhost:3000",
    "distDir": "../build",
    "withGlobalTauri": false
  },

  "tauri": {
    "allowlist": {
      "shell": {
        "all": false,
        "open": ".*"
      },
      "dialog": {
        "open": true
      }
    },

    "bundle": {
      "identifier": "com.mikewhy.wadpunk",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },

    "security": {
      "csp": null
    },

    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "WADPunk",
        "theme": "Dark",
        "width": 800,
        "height": 600
      }
    ]
  }
}
